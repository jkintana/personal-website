---
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import Layout from "@layouts/Layout.astro";
import { BlogPost, getBlogPosts } from "@util/contentful";

export async function getStaticPaths() {
  const blogPosts = await getBlogPosts();

  const pages = blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: {
      title: post.title,
      content: documentToHtmlString(post.content),
      date: new Date(post.date).toLocaleDateString(),
    },
  }));
  return pages;
}

const { content, title, date } = Astro.props;
---
<Layout title={ title }>
  <main>
    <h1>The blog format is still a work in progress!</h1>
    <article set:html={ content }></article>
  </main>
</Layout>